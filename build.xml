      <bootclasspath refid="sigmanlp.module.bootclasspath"/>
      <classpath refid="sigmanlp.module.production.classpath"/>
      <src refid="sigmanlp.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.sigmanlp"/>
    </javac>
    
    <copy todir="${sigmanlp.output.dir}">
      <fileset dir="${module.sigmanlp.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
    <copy todir="${build.lib}">
      <fileset dir="${basedir}/lib" />
    </copy>
  </target>
  
